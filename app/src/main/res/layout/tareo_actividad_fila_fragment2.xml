<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mCardView"

    >

    <RelativeLayout
        android:id="@+id/rlcontentcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/value_proyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="PROYECTO NOMBRE"
            android:textAlignment="center"
            android:textSize="18dp"
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/texto_horainicio"
            android:layout_width="105dp"
            android:layout_height="20dp"
            android:layout_below="@+id/value_proyecto"
            android:layout_marginTop="10dp"
            android:text="  HORA INICIO: "
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/value_horainicio"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_below="@+id/value_proyecto"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/texto_horainicio"
            android:text="10:00"
            android:textStyle="bold"
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/texto_solidnombre"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_below="@+id/value_horainicio"
            android:layout_marginTop="10dp"
            android:text="  NOMBRE SOLID: "
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/value_solidnombre"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@+id/value_horainicio"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/texto_solidnombre"
            android:text="SOLIDNOMBRE"
            android:textStyle="bold"
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/texto_tareanombre"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_below="@+id/texto_solidnombre"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:text="NOMBRE TAREA:"
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/value_tareanombre"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@+id/value_solidnombre"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/texto_tareanombre"
            android:text="TAREANOMBRE"

            android:textStyle="bold"
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/texto_empleadonombre"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_below="@+id/value_tareanombre"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:text="TRABAJADORES:"
            app:fontFamily="@font/latoregular" />

        <TextView
            android:id="@+id/value_empleadonombre"
            android:layout_width="284dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/texto_tareanombre"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/texto_tareanombre"

            android:text="EMPLEADOS"
            android:textStyle="bold"
            app:fontFamily="@font/latoregular" />

    </RelativeLayout>





</androidx.cardview.widget.CardView>